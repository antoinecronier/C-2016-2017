<Page x:Class="wpfzoo.views.administration.StructureAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:UC="clr-namespace:wpfzoo.views.usercontrols"
      xmlns:local="clr-namespace:wpfzoo.views.administration"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="StructureAdmin">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button x:Name="buttonNew" Width="20" Click="buttonNew_Click">New</Button>
        <UC:ListStructureUserControl x:Name="structureList" Grid.Column="1" Grid.Row="0" Grid.RowSpan="3"/>

        <Grid x:Name="oneInfos"  Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Grid.Row="0">Nom :</Label>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding name}"/>

            <Label Grid.Row="1">Surface :</Label>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding surface}"/>

            <Label Grid.Row="2">Employee :</Label>
            <Button x:Name="listdemployees" Grid.Row="2" Grid.Column="1" FontSize="9" Click="listdemployees_Click">La liste d'Employés</Button>

            <Label Grid.Row="3">Animaux :</Label>
            <Button Grid.Row="3" Grid.Column="1" FontSize="9">La liste d'Animaux</Button>

            <Grid Grid.Row="4" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="1" Grid.Column="0">Schedule :</Label>
                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Schedule.start}"/>
                <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Schedule.end}"/>
                <Button Grid.Row="2" Grid.Column="1" FontSize="9">Naviguer vers</Button>
            </Grid>


            <Button Grid.Row="5" Margin="53,0.4,57,36.6" Grid.ColumnSpan="2">DELETE</Button>
            <Button Grid.Row="5" Margin="53,23.4,57,13.6" Grid.ColumnSpan="2" >OK</Button>
        </Grid>

        <Grid x:Name="allInfos"  Grid.Column="0" Grid.Row="2">

        </Grid>

    </Grid>
</Page>
