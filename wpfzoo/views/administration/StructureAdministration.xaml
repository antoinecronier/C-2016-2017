<Page x:Class="wpfzoo.views.administration.StructureAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:UC="clr-namespace:wpfzoo.views.usercontrols"
      xmlns:local="clr-namespace:wpfzoo.views.administration"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="StructureAdmin">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <Button x:Name="buttonNew" Width="40" Click="buttonNew_Click">New</Button>
        <UC:ListStructureUserControl x:Name="UCstructureList" Grid.Column="1" Grid.Row="0" Grid.RowSpan="3"/>

        <Grid x:Name="oneInfos"  Grid.Column="0" Grid.Row="1" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Grid.Row="0">Nom :</Label>
            <TextBox x:Name="StructureName" Grid.Row="0" Grid.Column="1" Text="{Binding Name,Mode=TwoWay}"/>

            <Label Grid.Row="1">Surface :</Label>
            <TextBox x:Name="StructureSurface" Grid.Row="1" Grid.Column="1" Text="{Binding Surface,Mode=TwoWay}"/>

            <Label Grid.Row="2">Employee :</Label>
            <Button x:Name="listEmployees" Grid.Row="2" Grid.Column="1" FontSize="9" Click="listEmployees_Click" Height="17" Margin="0,0.2,0,0" VerticalAlignment="Top">La liste d'Employés</Button>

            <Label Grid.Row="3">Animaux :</Label>
            <Button x:Name="listAnimaux" Grid.Row="3" Grid.Column="1" FontSize="9" >La liste d'Animaux</Button>

            <Grid Grid.Row="4" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="1" Grid.Column="0">Schedule :</Label>
                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Schedule.start}"/>
                <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Schedule.end}"/>
                <Button x:Name="toSchedule" Grid.Row="2" Grid.Column="1" FontSize="9" Click="toSchedule_Click">Naviguer vers</Button>
            </Grid>


            <Button x:Name="Ok" Grid.Row="6" Margin="53,23.4,57,13.6" Grid.ColumnSpan="2" Click="Ok_Click">OK</Button>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="2">
            <Label Grid.Row="0" Content="Nom :" Margin="10,14,141,33.8"/>
            <TextBox x:Name="StructureToDeleteName" Grid.Row="0" Text="{Binding Name,Mode=TwoWay}" Margin="54,18,73,33.8"/>
            <Button x:Name="Delete"  Click="Delete_Click" Margin="127,18,0,33.8">DELETE</Button>
        </Grid>
        <Grid x:Name="allInfos"  Grid.Column="0" Grid.Row="3">

        </Grid>

    </Grid>
</Page>
